/* pages/news/news.wxss */
page{
  height: 100%;
}
.content{
  width: 100%;
  height: 100%;
}
.nav{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  padding: 20rpx;
  background: #edefee;
}
 .banner{
  margin-bottom: 5px;
} 
.nav_title{
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-family: " 微软雅黑";
  font-size: 28rpx;
  color: #848484;
  width: 100rpx;
}
.hoverNav{
  color: #476f89;
  background: #d4e2ef;
}
.newsPic{
  display: flex;
  margin-top: 20rpx;
  font-family: "微软雅黑";
  font-size: 24rpx;
}
.news{
  margin-right: 20rpx;
}
.newsTitle{
  text-align: center;
}
.newsList{
  display: flex;
  font-family: "微软雅黑";
  margin: 20rpx;
  justify-content: space-between;

}
.title_subject{
  font-size: 28rpx;
  font-weight: 800;
}
.title{
  color: #848484;
  font-size: 24rpx;
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;

}
.dianping{
  color: sandybrown;
  font-size: 24rpx;
}
.pic{
  margin-right: 10rpx;
}
.hr{
  width:100%;
  height: 2rpx;
  background: #848484;
}